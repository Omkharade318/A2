<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".A2"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/a2_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/a2_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.A2"
        tools:targetApi="31">
        <activity
            android:name=".presentation.auth.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.A2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".domain.service.MyMessagingService"
            android:exported="false" >

            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>

        </service>

        <activity android:name=".MainActivity" android:exported="false"/>
        <activity android:name=".presentation.auth.StartActivity" android:exported="false"/>

        <activity android:name=".presentation.drawer.Profile" android:exported="false"/>
        <activity android:name=".presentation.drawer.AboutUs" android:exported="false"/>
        <activity android:name=".presentation.drawer.Help" android:exported="false"/>
        <activity android:name=".presentation.drawer.Setting" android:exported="false"/>
        <activity android:name=".presentation.ChatPage" android:exported="false"/>
    </application>

</manifest>